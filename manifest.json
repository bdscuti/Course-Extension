{
  "manifest_version": 3,
  "name": "Course Extension",
  "version": "0.1",
  "permissions": ["storage"],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["course_jsons/*.json"],
      "matches": ["<all_urls>"]
    }
  ]
}